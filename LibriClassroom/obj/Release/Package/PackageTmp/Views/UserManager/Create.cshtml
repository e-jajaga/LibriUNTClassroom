@model LibriClassroom.Models.LibriCourse
@{
    ViewBag.Title = "New role assignment";
}

<!-- Breadcrumbs line -->
<div class="crumbs">
    <ul id="breadcrumbs" class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="@Url.Action("Index", new { controller = "Home" })">Home</a>
        </li>
        <li>
            <a href="@Url.Action("Index", new { controller = "UserManager" })" title="">Users</a>
        </li>
        <li class="current">
            <a href="@Url.Action("Create", new { controller = "UserManager" })" title="">Add</a>
        </li>
    </ul>
</div>
<!-- /Breadcrumbs line -->

<!--=== Page Header ===-->
<div class="page-header">
    <div class="page-title">
        <h3>@ViewBag.Title</h3>
        <span>@ViewBag.Message</span>
    </div>
</div>
<!-- /Page Header -->


<!--=== Page Content ===-->
<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4><i class="icon-reorder"></i>@ViewBag.Title</h4>
            </div>
            <div class="widget-content">
                @*<form class="form-horizontal row-border" action="#">*@
                @using (Html.BeginForm("Create", "UserManager", FormMethod.Post, new { @class = "form-horizontal row-border" }))
                {
                    <div class="form-group">
                        <label class="col-md-2 control-label">Department:</label>
                        <div class="col-md-10">
                            @Html.DropDownList("code", ViewBag.departamentet as SelectList, new { @class = "formcontrol" })
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label class="col-md-2 control-label">User:</label>
                        <div class="col-md-10">
                            @Html.DropDownList("username", ViewBag.instruktoret as SelectList, new { @class = "formcontrol" })
                        </div>
                    </div>

                    <div class="form-actions">
                        <input type="submit" value="Add" class="btn btn-primary pull-right">
                    </div>
                }
                @*</form>*@
            </div>
        </div>
    </div>
</div>
<!-- /Page Content -->

