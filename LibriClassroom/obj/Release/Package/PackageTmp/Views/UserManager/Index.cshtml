@model List<LibriClassroom.Models.DeanDepartmentsViewModel>
@{
    ViewBag.Title = "User manager";
}

<!-- Breadcrumbs line -->
<div class="crumbs">
    <ul id="breadcrumbs" class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="@Url.Action("Index", new { controller = "Home" })">Manage</a>
        </li>
        <li class="current">
            <a href="@Url.Action("Index", new { controller = "UserManager" })" title="">Users</a>
        </li>
    </ul>
</div>
<!-- /Breadcrumbs line -->

<!--=== Page Header ===-->
<div class="page-header">
    <div class="page-title">
        <h3>@ViewBag.Title</h3>
        <span>@ViewBag.Message</span>
    </div>
</div>
<!-- /Page Header -->
<p>
    <a class="btn btn-primary" href="@Url.Action("Index", new { controller = "UserManager/Create" })" title="">Add New</a>
</p>

<br>
@if (Model.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Department Code</th>
                <th>Department</th>
                <th>User</th>
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.DeparmentCode</td>
                    <td>@item.Department</td>
                    <td>@item.Dean</td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
